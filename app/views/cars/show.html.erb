<div class="card-product">
  <img class="card-img-left" src="<%= @car.image %>" />
  <div class="card-body">
    <div class="price"><%= @car.price %>â‚¬/day</div>
    <h2><%= @car.model %></h2>
    <p><%= @car.description %></p>
    <% @car.reviews.each do |review| %>
      <div class="reviews">
        <div class="reviews-comment">
          <i><%= review.content %></i> <%= review.rating %>/5
          <span class="delete"><%= link_to 'X', review_path(review),
            method: :delete,
            data: { confirm: "Are you sure?" } %></span>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= cl_image_tag("hwlmr8qikwexer7hpzdq",
      width: 400, height: 300, crop: :fill) %>

<div class="container">
  <% if user_signed_in? %>
    <%= link_to 'Add a review', new_car_review_path(@car), class: "btn btn-primary" %>
  <% end %>

  <% if @car.user == current_user %>
    <%= link_to "Edit Vehicle", edit_car_path(@car), class: "btn btn-primary" %>
  <% end %>

  <% if @car.user == current_user %>
    <%= link_to "Delete", @car, method: :delete, data: { confirm: "Are you sure you want to delete #{@car.brand}?" }, class: "btn btn-primary" %>
  <% end %>

  <%= link_to 'Go to vehicles', cars_path, class: "btn btn-primary" %>

  <% if @car.user != current_user %>
    <%= link_to 'Book this vehicle', new_car_reservation_path(@car), class: "btn btn-primary"  %>
  <% end %>
  <br>
</div>


